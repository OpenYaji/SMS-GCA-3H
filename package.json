{
    "name": "sms-gca-3d-root",
    "version": "1.0.0",
    "private": true,
    "scripts": {
      "dev:student": "cd Student/frontend && npm run dev -- --host --port 5173",
      "dev:registrar": "cd Registrar/frontend && npm run dev -- --host --port 5174",
      "dev:admin": "cd Admin/frontend && npm run dev -- --host --port 5175",
      "dev:guard": "cd Guard/frontend && npm run dev -- --host --port 5176",
      "dev:teacher": "cd Teacher/frontend && npm run dev -- --host --port 5177",
      "dev:all": "concurrently -n \"Student,Registrar,Admin,Guard,Teacher\" -c \"green,blue,red,magenta,yellow\" \"npm run dev:student\" \"npm run dev:registrar\" \"npm run dev:admin\" \"npm run dev:guard\" \"npm run dev:teacher\""
    },
    "devDependencies": {
      "concurrently": "^9.1.0"
    }
  }